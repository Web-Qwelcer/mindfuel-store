generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

model Order {
  id        String       @id @default(uuid())
  total     Int
  status    OrderStatus
  createdAt DateTime     @default(now())
  items     OrderItem[]
}

model OrderItem {
  id        String  @id @default(uuid())
  name      String
  price     Int
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
}