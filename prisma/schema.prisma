generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

model Order {
  id        String      @id @default(uuid())
  total     Int
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  items     OrderItem[]
}

model OrderItem {
  id       String @id @default(uuid())
  name     String
  price    Int
  quantity Int

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String
}
